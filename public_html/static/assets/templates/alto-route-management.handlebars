  <div class="row" style="margin-top:15px; margin-right: 0px;">
    <div class="col-md-4">
      <div class="row">
        <div class="col-md-12 text-center">
          <h1>ALTO Route Management</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4 text-right">
          <span class="details-keys">Total Routes</span>
        </div>
        <div class="col-md-4 text-right">
          <span class="details-values">{{paths.length}}</span>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12 text-center">
          <button type="button" class="btn btn-success" data-toggle="modal" data-target="#ALTORouteCalculationModal"><i class="fa fa-plus"></i> Setup a new route</button>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="tab-pane active">
          <table class="table table-condensed table-hover paths">
            <thead>
              <tr>
                <th></th>
                <th>Length</th>
                <th>Route</th>
                <th colspan="2">Rate Limit(kbps)</th>
              </tr>
            </thead>
            <tbody>
              {{#each paths}}
              <tr>
                <td><a href="#" data-toggle="modal" data-target="#ALTORouteRemoveModal" data-route="{{this.path}}"><i style="color: #d35400;" title="Click here to remove this path..." class="fa fa-trash"></i></a></td>
                <td>{{this.path.length}}</td>
                <td>{{#each this.path}}<span class="label label-primary">{{this}}</span> {{/each}}</td>
                <td style="color: #d35400">
                  {{#tc}}
                  {{this}}
                </td>
                <td>
                  <button type="button" class="btn btn-default btn-xs tc-update"><i class="fa fa-pencil"></i>Update</button>
                  <button type="button" class="btn btn-danger btn-xs tc-remove" data-toggle="modal" data-target="#ALTORateRemoveModal"><i class="fa fa-remove"></i>Remove</button>
                  {{/tc}}
                  {{^tc}}
                  No limit
                </td>
                <td>
                  <button type="button" class="btn btn-success btn-xs tc-create"><i class="fa fa-pencil"></i>Create</button>
                  {{/tc}}
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
